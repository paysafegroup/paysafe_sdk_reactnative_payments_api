{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "lib": ["es2016", "dom"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "paysafe-card-payments/src/**/*",
    "paysafe-google-pay/src/**/*",
    "paysafe-payments-sdk-common/src/**/*",
    "paysafe-venmo/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ]
}